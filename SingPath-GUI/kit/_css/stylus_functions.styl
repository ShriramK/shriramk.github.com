  padding  0px

  .commonBtn
    float    right
    display  block
    position absolute
    top      0px
    right    20px
    margin   0px
    padding  0px
    
    &.big
      font-size 13px
    
    &.small
      font-size 10px
  
  .labelContainer
    float    left
    position absolute
    margin   7px 0px 0px 1px
    
    $curveHeight = 20px
    
    .label
      background-color #7FA0B2
      border-radius(10px, 0px, 0px, 0px)
      color            #FFF
      font-size        16px
      font-weight      bold
      line-height      $curveHeight
      float            left
      padding          1px 5px 0px 14px
    
    .curve
      background-image url(../_images/backgrounds/curve_small_top.png)
      float            right
      width            29px
      height           $curveHeight
  
  .textContainer
    margin  25px 0px 0px 0px
    padding 0px
    
    .text
      font-size 15px
      margin    0px
      padding   0px


commonPopUp()
  background-color rgba(0, 0, 0, 0.25)
  position         fixed
  top              0px
  left             0px
  width            100%
  height           100%
  z-index          10
  
  &.show
    display table
  
  &.hide
    display none
  
  .container
    text-align     center
    vertical-align middle
    cursor         pointer
    display        table-cell
    width          100%
    height         100%
    
    .mainContent
      commonBGContainer() 
      
      text-align  left
      white-space normal
      cursor      default
      display     inline-block
      
      .closeBtn
        background url(../_images/commonButtons/popUpClose_off.png) no-repeat
        cursor     pointer
        position   absolute
        top        10px
        right      -15px
        width      40px
        height     35px
        
        &:hover
          background url(../_images/commonButtons/popUpClose_on.png) no-repeat
      
      .labelBottomContainer
        float    right
        overflow hidden
        margin   -5px 1px 0px 0px
        width    179px
        height   44px
        
        .label, .curve
          float left
        
        .label
          background-color $commonBGColor
          border-radius(0px, 0px, 10px, 0px)
          box-shadow(0px, 0px, 6px, 0px, #666)
          height 41px
          
          $btnWidth  = 166px
          $btnHeight = 38px
          
          .btn
            background   url(../_images/commonButtons/largeButtonBlank_off.png) no-repeat
            font-size    19px
            color        $commonTextColor
            text-align   center
            tshadow()
            line-height  $btnHeight - 4px
            cursor       pointer
            display      block
            width        $btnWidth
            height       $btnHeight
            margin-right 9px
            
            &:hover, &.on
              background url(../_images/commonButtons/largeButtonBlank_on.png) no-repeat
              color      #FFF
            
            &.error
              cursor default
              
              &:hover
                background url(../_images/commonButtons/largeButtonBlank_off.png) no-repeat
                color      $commonTextColor
        
        $curveWidth  = 33px
        $curveHeight = 42px
        
        .curve
          background url(../_images/backgrounds/curve_big_bottom.png) no-repeat
          width      $curveWidth
          height     $curveHeight
          
          position absolute
          margin-left -1*$curveWidth
